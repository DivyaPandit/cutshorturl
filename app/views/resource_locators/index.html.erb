<p id="notice"><%= notice %></p>

<h4 class="text-center mb-4">Links Summary</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Given url</th>
      <th>Minified url</th>
      <th>Clicks</th>
    </tr>
  </thead>

  <tbody>
    <% @resource_locators.each do |resource_locator| %>
      <tr>
        <td width="50%"><%= resource_locator.given_url %></td>
        <td width="30%"><%= link_to resource_locator.view_mini_url, resource_locator.mini_url, target: '_blank'%></td>
        <td width="10%"><%= resource_locator.clicks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @resource_locators %>
<br>